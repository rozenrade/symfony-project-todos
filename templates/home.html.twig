{% extends "layout.html.twig" %}

{% block main %}
	<header>
		<nav>
			<ul>
				<li><a href="/todos">Créer un groupe de tâches</a></li>
			</ul>
		</nav>
	</header>
	<div class="header">
		<div class="hero">
			<img src="https://main--zen-jepsen-04a701.netlify.app/_ipx/w_750,q_75/%2Fblog%2Fblog.png?url=%2Fblog%2Fblog.png&w=750&q=75" alt="">
		</div>
		<div class="content">
			{% if todos is not empty %}
				{% for todo in todos %}
					<form action="/process-task" method="POST">
						<label for="">Add task for :
							{{ todo.name }}</label>
						<input type="" placeholder="input a task name">
						<button type="submit">Add</button>
					</form>
				{% else %}
					<li>Aucune liste trouvée.</li>
				{% endfor %}
			{% endif %}

		</div>
	</div>
{% endblock %}
